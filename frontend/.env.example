# Rwanda Service Marketplace - Frontend Environment Variables

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API URL
# Development: http://localhost:3001/api
# Production: https://your-backend-domain.com/api
NEXT_PUBLIC_API_URL="http://localhost:3001/api"

# WebSocket URL (if using real-time features)
# Development: ws://localhost:3001
# Production: wss://your-backend-domain.com
NEXT_PUBLIC_WS_URL="ws://localhost:3001"

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Google Maps API Key (for location services)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Cloudinary Configuration (for image display)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"

# Analytics (Google Analytics, etc.)
NEXT_PUBLIC_GA_TRACKING_ID="your-google-analytics-id"

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Name
NEXT_PUBLIC_APP_NAME="Rwanda Service Marketplace"

# Application URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Default Language
NEXT_PUBLIC_DEFAULT_LANGUAGE="en"

# Supported Languages (comma-separated)
NEXT_PUBLIC_SUPPORTED_LANGUAGES="en,rw"

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable mobile app download links
NEXT_PUBLIC_ENABLE_MOBILE_LINKS=true

# Enable dark mode toggle
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# Enable real-time notifications
NEXT_PUBLIC_ENABLE_REALTIME=false

# Enable PWA features
NEXT_PUBLIC_ENABLE_PWA=true

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================

# Default location (for initial map center)
NEXT_PUBLIC_DEFAULT_LAT="-1.9441"
NEXT_PUBLIC_DEFAULT_LNG="30.0619"

# Default city
NEXT_PUBLIC_DEFAULT_CITY="Kigali"

# Contact Information
NEXT_PUBLIC_CONTACT_EMAIL="info@servicerw.com"
NEXT_PUBLIC_CONTACT_PHONE="+250788123456"

# =============================================================================
# SOCIAL MEDIA
# =============================================================================

# Social Media Links
NEXT_PUBLIC_FACEBOOK_URL="https://facebook.com/servicerw"
NEXT_PUBLIC_TWITTER_URL="https://twitter.com/servicerw"
NEXT_PUBLIC_INSTAGRAM_URL="https://instagram.com/servicerw"
NEXT_PUBLIC_LINKEDIN_URL="https://linkedin.com/company/servicerw"

# =============================================================================
# SEO & METADATA
# =============================================================================

# Default Meta Description
NEXT_PUBLIC_META_DESCRIPTION="Find trusted real estate service providers in Rwanda. Connect with plumbers, electricians, construction firms, and more."

# Default Meta Keywords
NEXT_PUBLIC_META_KEYWORDS="Rwanda, real estate, services, construction, plumbing, electrical, marketplace"

# =============================================================================
# PAYMENT CONFIGURATION (if implementing payments)
# =============================================================================

# Stripe Public Key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="your-stripe-public-key"

# PayPal Client ID
NEXT_PUBLIC_PAYPAL_CLIENT_ID="your-paypal-client-id"

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Enable debug mode
NEXT_PUBLIC_DEBUG=false

# Show development tools
NEXT_PUBLIC_SHOW_DEV_TOOLS=false

# =============================================================================
# PRODUCTION ONLY
# =============================================================================

# Enable service worker
NEXT_PUBLIC_ENABLE_SW=true

# Enable error reporting
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true

# =============================================================================
# PERFORMANCE
# =============================================================================

# Image optimization
NEXT_PUBLIC_ENABLE_IMAGE_OPTIMIZATION=true

# Lazy loading
NEXT_PUBLIC_ENABLE_LAZY_LOADING=true

# =============================================================================
# SECURITY
# =============================================================================

# Content Security Policy
NEXT_PUBLIC_CSP_ENABLED=true

# =============================================================================
# NOTES
# =============================================================================

# 1. Copy this file to .env.local and fill in your actual values
# 2. Variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# 3. Never put sensitive data in NEXT_PUBLIC_ variables
# 4. For production, use environment variables from your hosting platform
# 5. Some variables are optional and have sensible defaults
